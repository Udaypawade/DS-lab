#include <iostream>
#include <string>
#define SIZE 10
using namespace std;

class printer {
    string* jobs;
    int size;
    int front, rear;

public:
    printer(int n) {
        size = n;
        jobs = new string[size];
        front = -1;
        rear = -1;
    }

    void addjob(string jobname) {
        if ((rear + 1) % size == front) {
            cout << "Spooler is full\n";
            return;
        }
        if (front == -1) {
            front = rear = 0;
        } else {
            rear = (rear + 1) % size;
        }
        jobs[rear] = jobname;
        cout << "Job Name := " << jobname << "\n";
    }

    void processjob() {
        if (front == -1) {
            cout << "Spooler is empty\n";
            return;
        }
        cout << "Processing print job: " << jobs[front] << "\n";
        if (front == rear) {
            front = rear = -1;
        } else {
            front = (front + 1) % size;
        }
    }

    void showjob() {
        if (front == -1) {
            cout << "Spooler is empty\n";
            return;
        }
        cout << "Current print queue: ";
        int i = front;
        while (true) {
            cout << jobs[i];
            if (i == rear)
                break;
            cout << " -> ";
            i = (i + 1) % size;
        }
        cout << "\n";
    }
};

int main() {
    printer myPrinter(SIZE);
    int choice;
    string jobname;

    do {
        cout << "1. Add Print job\n";
        cout << "2. Process print job\n";
        cout << "3. Show all print jobs\n";
        cout << "4. Exit\n";
        cout << "Choose an option: ";
        cin >> choice;

        switch (choice) {
            case 1:
                cout << "Enter print job name: ";
                cin >> jobname;
                myPrinter.addjob(jobname);
                break;
            case 2:
                myPrinter.processjob();
                break;
            case 3:
                myPrinter.showjob();
                break;
            case 4:
                cout << "Exiting... Thank you!\n";
                break;
            default:
                cout << "Invalid option. Try again.\n";
        }
    } while (choice != 4);

    return 0;
}





















